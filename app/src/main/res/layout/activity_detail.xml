<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/detial_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/russia"/>
    <TextView
        android:id="@+id/Countryname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Russia"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/detail_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Russia, or the Russian Federation, is a transcontinental country located in Eastern Europe and Northern Asia. It extends from the Baltic Sea in the west to the Pacific Ocean in the east, and from the Arctic Ocean in the north to the Black Sea and the Caspian Sea in the south."
        android:layout_margin="10dp"
        android:textSize="16sp" />

</LinearLayout>